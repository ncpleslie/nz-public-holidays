// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Holiday {
  id       String   @id
  name     String
  date     DateTime
  observed DateTime
  regions   Region[]
}

model Region {
  id      String    @id
  name    String
  holidays Holiday[]
}
