// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_PROXY_URL")
  relationMode = "prisma"
}

model Region {
  id      String    @id
  name    String
  holiday Holiday[]
}

model Holiday {
  id       String
  name     String
  date     DateTime
  observedDate DateTime
  region   Region @relation(fields: [regionId], references: [id])
  regionId String

  @@id([id, date])
}
